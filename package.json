{
  "name": "rustiohook",
  "version": "0.2.4",
  "description": "High-performance global input listener (keyboard & mouse) using Rust and Node.js (NAPI-RS)",
  "main": "index.js",
  "types": "index.d.ts",
  "license": "MIT",
  "author": "Xzdes",
  "repository": {
    "type": "git",
    "url": "https://github.com/Xzdes/rustiohook.git"
  },
  "keywords": [
    "rust",
    "node",
    "napi",
    "keyboard",
    "mouse",
    "global-hook",
    "input",
    "scanner",
    "hotkey"
  ],
  "engines": {
    "node": ">=18"
  },
  "napi": {
    "name": "rustiohook"
  },
  "scripts": {
    "test": "node __test__/index.spec.js",
    "clean": "powershell -Command \"Remove-Item -Recurse -Force target -ErrorAction SilentlyContinue\"",
    "build": "napi build --platform --release",
    "build:debug": "npm run clean && napi build --platform && powershell -Command \"Rename-Item -Path target/debug/rustiohook.dll -NewName rustiohook.node\"",
    "rebuild:debug": "npm run build:debug",
    "artifacts": "napi artifacts"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.4"
  }
}
